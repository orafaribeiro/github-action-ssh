{
  "name": "@orafaribeiro/github-action-ssh",
  "version": "0.6.4",
  "description": "Run commands on a remote server via SSH.",
  "repository": {
    "type": "git",
    "url": "https://github.com/orafaribeiro/github-action-ssh"
  },
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "pack": "ncc build"
  },
  "bin": {
    "github-action-ssh": "dist/index.js"
  },
  "preferGlobal": false,
  "keywords": [
    "typescript",
    "github",
    "github-actions",
    "actions",
    "ssh"
  ],
  "author": "orafaribeiro",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "node-ssh": "^13.0.1"
  },
  "devDependencies": {
    "@types/node": "^16.11.6",
    "@zeit/ncc": "^0.22.3",
    "prettier": "^2.4.1",
    "ssh2-streams": "^0.4.10",
    "typescript": "^4.4.4"
  }
}
